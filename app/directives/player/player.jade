.wallpaper(ng-style="wallpaper")
  
  .controls 
    md-button(class="md-fab small" ng-click="Player.previous()")
      i(class="material-icons play") skip_previous
      
    md-button(class="md-fab" ng-class="{active: Player.isActive(item), isPlaying: Player.isPlaying(item)}" ng-click="Player.isPlaying(item) ? Player.pause(item) : Player.play(item)")
      i(class="material-icons play") play_arrow
      i(class="material-icons pause") pause
      
    md-button(class="md-fab small" ng-click="Player.previous()")
      i(class="material-icons play") skip_next
      
  .info 
    
    .playing
      .wrapper
        .cover
          img(src="{{ item.track.artwork_url }}")
    
        .about
          .author {{ item.track.user.username }}
            
          .title {{ item.track.title }}
    
    .upcoming
      h2 Upcoming
      .track
        .author Melvv
        .title Weekend
        
      .track
        .author CSGOD
        .title Wanted
        
      .track
        .author Future House Music
        .title This One's For You (STVCKS Remix)
      
